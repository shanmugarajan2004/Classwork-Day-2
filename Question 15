#include<stdio.h>

int reverse(int num, int rev){
    if(num == 0){
        return rev;
    }
    else{
        rev = (rev * 10) + (num % 10);
        return reverse(num / 10, rev);
    }
}

int main(){
    int num, rev=0;

    printf("Enter a number: ");
    scanf("%d",&num);

    printf("The reverse of the number is: %d",reverse(num, rev));
    return 0;
}
