#include <stdio.h>

void copyArray(int *source, int *dest, int size);

int main() {
    int arr1[] = {1, 2, 3, 4, 5};
    int arr2[5];

    copyArray(arr1, arr2, 5);

    printf("Original Array: ");
    for (int i = 0; i < 5; i++) {
        printf("%d ", arr1[i]);
    }
    printf("\n");

    printf("Copied Array: ");
    for (int i = 0; i < 5; i++) {
        printf("%d ", arr2[i]);
    }
    printf("\n");

    return 0;
}

void copyArray(int *source, int *dest, int size) {
    for (int i = 0; i < size; i++) {
        *(dest + i) = *(source + i);
    }
}
